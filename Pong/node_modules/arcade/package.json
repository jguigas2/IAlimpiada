{
  "name": "arcade",
  "version": "0.0.11",
  "author": "Dmitry Belyaev <blv.dmitry@gmail.com>",
  "main": "./index.js",
  "jsnext:main": "./index.js",
  "module": "./index.js",
  "types": "./index.d.ts",
  "files": [
    "components/**/*",
    "constants/**/*",
    "hooks/**/*",
    "icons/**/*",
    "styles/**/*",
    "themes/**/*",
    "types/**/*",
    "utilities/**/*",
    "index.js",
    "index.d.ts",
    "postcss.js"
  ],
  "scripts": {
    "transform-themes": "arcade-transform-themes --output src/themes && node tools/theming/generateProvider.js",
    "clean": "rm -rf dist && rm -rf components && rm -rf constants && rm -rf hooks && rm -rf icons && rm -rf styles && rm -rf themes && rm -rf types && rm -rf utilities && rm -f index.js && rm -f index.d.ts",
    "build": "yarn clean && yarn build:esm && yarn build:css && yarn release:before",
    "build:esm": "ttsc --outDir dist/esm",
    "build:css": "postcss \"src/**/*.css\" --dir dist/esm --base src",
    "start": "start-storybook -c tools/storybook",
    "build:preview": "build-storybook -c tools/storybook -o dist/app",
    "build:chromatic": "STORYBOOK_ENV=chromatic build-storybook -c tools/storybook",
    "release:before": "cp -r dist/esm/* ./",
    "release:after": "yarn clean",
    "chromatic": "npx chromatic -b build:chromatic --project-token=jbcohq2nbtr",
    "test:vrt": "yarn chromatic",
    "test:unit": "jest --config tools/jest/jest.config.js"
  },
  "license": "MIT",
  "sideEffects": false,
  "browserslist": [
    "last 3 versions and > 0.25%, not IE 11"
  ],
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@storybook/addon-a11y": "^5.3.17",
    "@storybook/addon-storysource": "^5.3.17",
    "@storybook/react": "^5.3.17",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.1.7",
    "@types/jest": "^26.0.14",
    "arcade-storybook-addon-rtl": "^0.0.10",
    "arcade-theming": "^0.0.10",
    "babel-jest": "^26.5.2",
    "babel-loader": "^8.1.0",
    "chromatic": "^5.0.0",
    "jest": "^26.5.2",
    "jest-matchmedia-mock": "^1.1.0",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.2",
    "postcss-each": "^0.10.0",
    "ts-jest": "^26.4.1"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "dependencies": {
    "autoprefixer": "^9.7.4",
    "cssnano": "^4.1.10",
    "nanoid": "^3.1.3",
    "postcss-apply": "^0.12.0",
    "postcss-custom-media": "^7.0.8",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.2.1",
    "postcss-prepend-imports": "^1.0.1",
    "postcss-rtlcss": "^1.5.0"
  },
  "gitHead": "0e94341f99572eacf1e476054b080bce2c902cea"
}
